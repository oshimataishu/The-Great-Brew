<div class="col-md-3 mt-3">
<h2>User info</h2>


<table class="table mt-2">
  <tr><td colspan="2"><%= image_tag user.get_profile_image(100,100) %></td></tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
  <tr>
    <th>フォロー数</th>
    <td><%= link_to user.followings.count, followings_user_relationships_path(user.id) %></td>
  </tr>
  <tr>
    <th>フォロワー数</th>
    <td><%= link_to user.followers.count, followers_user_relationships_path(user.id) %></td>
  </tr>
</table>

<div class="row mb-3 text-center">
  <% if user == current_user %>
    <% elsif current_user.following?(user) %>
      <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class:"btn btn-sm mx-auto btn-danger" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-sm mx-auto btn-success" %>
    <% end %>
</div>

<div class="row">
<%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
<% end %>
</div>

<h2 class="mt-3">New book</h2>

<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %>件 errorが発生しました。
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: book do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_field :body %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class:"btn btn-info" %>
  </div>

<% end %>
</div>