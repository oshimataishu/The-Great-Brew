<div class="col-md-3 mt-3">
  <div class="row justify-content-center text-center">
      <h3>Profile</h3>

    <table class="table mt-2">
      <tr><td colspan="2"><%= image_tag user.get_profile_image(100,100) %></td></tr>
      <tr>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td><%= user.introduction %></td>
      </tr>
      <tr>
        <td>
          <%= link_to followers_user_relationships_path(user.id) do %>
            <i class="bi bi-person-heart"></i>フォロワー <%= user.followers.count %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>

  <%= render 'layouts/follow_btn', user: user%>

  <div class="row">
  <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  </div>


<h3 class="mt-3">New beer</h3>

<% if @new_beer.errors.any? %>
  <%= @new_beer.errors.count %>件 errorが発生しました。
  <ul>
    <% @new_beer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: beer do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_field :body %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, accept: '*/image' %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Beer", class:"btn btn-info" %>
  </div>

<% end %>
</div>