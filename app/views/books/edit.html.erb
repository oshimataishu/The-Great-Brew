<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
    <h2 class="mt-3">Editing Book</h2>

    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました。
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @book do |f| %>
      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :body %><br>
        <%= f.text_field :body %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book", class:"btn btn-info" %>
      </div>

    <% end %>

    <%= link_to "Show", book_path(@book) %> | 
    <%= link_to "Back", books_path %>
    </div>
  </div>
</div>