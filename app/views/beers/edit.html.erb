<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
    <h2 class="mt-3">Editing Beer</h2>

    <% if @beer.errors.any? %>
      <%= @beer.errors.count %>件のerrorが発生しました。
      <ul>
        <% @beer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @beer do |f| %>
      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :body %><br>
        <%= f.text_field :body %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Beer", class:"btn btn-info" %>
      </div>

    <% end %>

    <%= link_to "Show", beer_path(@beer) %> | 
    <%= link_to "Back", beers_path %>
    </div>
  </div>
</div>